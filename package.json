{
  "name": "howard-county-newsletter",
  "version": "1.0.0",
  "description": "Comprehensive Howard County civic journalism platform with automated data collection and multi-platform publishing",
  "main": "index.js",
  "scripts": {
    "start": "n8n start",
    "deploy": "bash scripts/deploy.sh",
    "backup": "bash scripts/backup.sh",
    "test": "jest",
    "test:integration": "jest --testPathPattern=tests/.*integration.*",
    "test:watch": "jest --watch",
    "dev": "nodemon server.js",
    "lint": "eslint . --ext .js,.json",
    "format": "prettier --write .",
    "build": "npm run lint && npm test"
  },
  "dependencies": {
    "n8n": "^0.197.0",
    "pg": "^8.7.1",
    "axios": "^1.6.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "redis": "^4.6.10"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.8"
  },
  "keywords": [
    "civic journalism",
    "government transparency", 
    "newsletter automation",
    "n8n workflows",
    "data journalism",
    "howard-county"
  ],
  "author": "Howard County Newsletter Team",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/howard-county/newsletter.git"
  }
}